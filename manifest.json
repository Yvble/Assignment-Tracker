{
  "manifest_version": 3,
  "name": "LMS Assignment Due Date Collector",
  "description": "Automatically extracts assignment due dates from LMS pages and tracks them locally.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/date-utils.js",
        "lib/lms-detector.js",
        "lib/extractor.js",
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "All In One Assignment Tracker"
  },
  "options_ui": {
    "page": "dashboard/calendar.html",
    "open_in_tab": true
  }
}
